<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gab.cdi.teleo.main.teleo_fragments.FragmentShowDrilldown">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/showDrilldownHeaderPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/fragment_home_online"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/showDrilldownProgramTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="184dp"
            android:fontFamily="@font/roboto_bold"
            android:text="the reset"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSizeLarger"
            app:layout_constraintEnd_toEndOf="@id/showDrilldownHeaderPhoto"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintStart_toStartOf="@id/showDrilldownHeaderPhoto"
            app:layout_constraintTop_toTopOf="@id/showDrilldownHeaderPhoto" />

        <TextView
            android:id="@+id/showDrilldownProgramSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/roboto"
            android:text="yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada yada "
            android:textSize="@dimen/textSizeNormal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showDrilldownHeaderPhoto" />

        <ImageView
            android:id="@+id/showDrilldownHeaderPhotoAlt"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/fragment_home_online"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showDrilldownProgramSynopsis" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
