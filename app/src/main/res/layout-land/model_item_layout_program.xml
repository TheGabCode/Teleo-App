<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/programThumbnail"
        android:layout_width="200dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:scaleType="fitXY"
        android:src="@drawable/fragment_home_online"/>
    <TextView
        android:id="@+id/programNumber"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="180dp"
        android:background="#FD4A49"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:text="1"
        android:inputType="textMultiLine"
        android:textColor="#fff"
        android:textSize="@dimen/textSizeLarge"
        app:layout_constraintBottom_toBottomOf="@id/programThumbnail"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="@id/programThumbnail"
        app:layout_constraintTop_toTopOf="@id/programThumbnail"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/programTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Techie"
        android:textColor="#fff"
        android:textSize="@dimen/textSizeLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/programThumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/programDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="DescriptionDescriptionDescriptionDescription"
        android:textColor="#fff"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/programThumbnail"
        app:layout_constraintTop_toBottomOf="@+id/programTitle"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>